<!--<form class="form">-->
<div class="nested-fields">
  <br><br>

  <div class="column col-xs-11 col-sm-5">
    <label for="job_title">Job Title:</label>
    <%= f.text_field :job_title, :class => 'form_group'%>
  </div>

  <div class="column col-xs-10 col-sm-5">
    <label for="job_description,">Job Description:</label>
    <%= f.text_field :job_description, :class => 'form_group'%>
  </div>

  <div class="column col-xs-11 col-sm-5">
    <label for="job_Category">Job Category:</label>
    <%= f.text_field :job_Category, :class => 'form_group'%>
  </div>

  <div class="column col-xs-10 col-sm-5">
    <label for="job_sub_category">Sub Category:</label>
    <%= f.text_field :job_sub_category, :class => 'form_group'%>
  </div>

  <div class="column col-xs-12 col-sm-5">
    <label for="job_family ">Job family :</label>
    <%= f.text_field :job_family , :class => 'form_group'%>
  </div>

  <div class="column col-xs-12 col-sm-6">
    <label for="job_calssification">Job Classification:</label>
    <%= f.text_field :job_calssification, :class => 'form_group'%>
  </div>

  <div class="column col-xs-12 col-sm-5">
    <label for="start_date">Start Date:</label>
    <%= f.text_field :start_date, :class => 'form_group datepicker'%>
    <span class="glyphicon glyphicon-calendar"></span>

  </div>

  <div class="column col-xs-12 col-sm-6">
    <label for="end_date">End Date:</label>
    <%= f.text_field :end_date, :class => 'form_group datepicker'%>
    <span class="glyphicon glyphicon-calendar"></span>

  </div>
  <p><%= link_to_remove_association 'Remove' , f  %></p>

</div>

<script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker();
  });
</script>

