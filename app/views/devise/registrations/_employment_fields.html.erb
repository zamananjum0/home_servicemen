  <div class ='nested-fields'>
    <div class = 'well'>

      <div class="column col-xs-11 col-sm-4">
        <label>Start date</label>
        <%= text_field_tag :start_date, Date.today.strftime('%d/%m/%Y'), class: 'datepicker', placeholder: 'From'%>
      </div>

      <div class="column col-xs-10 col-sm-4">
        <label>End date</label>
        <%= text_field_tag :end_date, Date.today.strftime('%d/%m/%Y'), class: 'datepicker', placeholder: 'End'%>
      </div>




      <p><%= link_to_add_association'Add Jobs', f, :jobs %></p>
      <%= f.fields_for :jobs do |builder| %>
          <%= render 'job_fields', :f => builder %>
      <% end %>



      <p><%= link_to_add_association'Add Organization', f, :organizations %></p>
      <%= f.fields_for :organizations do |builder| %>
          <%= render 'organization_fields', :f => builder %>
      <% end %>


      <%= link_to_remove_association 'Remove employment' , f %>


  </div>
</div>

  <script type="text/javascript">
    $(document).ready(function(){
      $('.datepicker').datepicker();
    });
  </script>
