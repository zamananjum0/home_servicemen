<div class="nested-fields">

  <div class="column col-xs-12 col-sm-6">
    <label for="grade_unit">Grade Unit:</label>
    <%= f.text_field :grade_unit, :class => 'form_group'%>
  </div>

  <div class="column col-1 col-sm-2">
      <label for="grade_total">Total:</label>
      <%= f.text_field :grade_total, :class => 'form_group'%>
  </div>

  <div class="column col-1 col-sm-2">
      <label for="grade_status">Status:</label>
      <%= f.text_field :grade_status, :class => 'form_group'%>
  </div>

  <p><%= link_to_remove_association 'Remove' , f  %>   </p>

</div>
